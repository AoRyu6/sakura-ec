%h2= t('devise.registrations.new.sign_up')
= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form|
  = form.error_notification
  .form-inputs
    = form.input :name,
                 required: true,
                 input_html: { autocomplete: 'name' }
    = form.input :email,
                 required: true,
                 input_html: { autocomplete: 'email' }
    = form.input :password,
                 required: true,
                 hint: (t('devise.shared.minimum_password_length', count: @minimum_password_length) if @minimum_password_length),
                 input_html: { autocomplete: 'new-password' }
    = form.input :password_confirmation,
                 required: true,
                 input_html: { autocomplete: 'new-password' }
  .form-actions
    = form.button :submit, class: 'btn-primary'
.mt-3
  = render 'users/shared/links'
